@model ProductViewModel
@{
    ViewData["Title"] = "Index";
}

<main>
    <!-- Home Page -->
    <section id="main-home-page">
        <div class="contentWrap">
            <div class="container">
                <div class="breadcrumb">
                    <ul class="breadcrumb-nav">
                        <li class="nav-item"><a href="#">Kompüter mağazası "iComp"</a></li>
                        <li class="nav-item"><span class="breadcrumb-arrow">></span><a href="#">Kompüterlər</a></li>
                    </ul>
                </div>

                <div class="row">
                    <!-- aside start -->
                    <div class="col-lg-3 col-md-12">
                        <!-- Filter -->
                        <div class="main-home-page__filter">
                            <h3 style="margin-bottom: 20px;">Filter</h3>
                            <div class="main-home-page__filter-box">
                                <div class="filter-item">
                                    <div class="filter-item__price">
                                        <div class="row">
                                            <div class="col-md-12">

                                                <div id="slider-range" class="price-filter-range" name="rangeInput">
                                                </div>

                                                <div style="margin:30px auto">
                                                    <input type="number" min=@Model.MinPrice max="@Model.MaxPrice"
                                                           oninput="validity.valid||(value='@Model.MinPrice');" name="minPrice" form="filterForm" id="min_price"
                                                           class="price-range-field" />
                                                    <input type="number" min=@Model.MinPrice max="@Model.MaxPrice"
                                                           oninput="validity.valid||(value='@Model.MaxPrice');" name="maxPrice" form="filterForm" id="max_price"
                                                           class="price-range-field" />
                                                </div>

                                                <button class="price-range-search"
                                                        id="price-range-submit">
                                                    Search
                                                </button>

                                                <div id="searchResults" class="search-results-block"></div>

                                                <div class="clear-fix"></div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>TƏYİNAT</h2>
                                        <i class="fa-solid fa-angle-down"></i>
                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.destinationGetDtos)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.destinationid == item.Id ? "checked" : "") name="destinationid" value="@item.Id" id="destination-@item.Id">
                                                <label for="destination-@item.Id">@item.Name <span>(318)</span></label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>ANA PLATA</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.motherBoardGetDtos)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.motherboardid == item.Id ? "checked" : "") name="motherboardid" value="@item.Id" id="motherboard-@item.Id">
                                                <label for="motherboard-@item.Id">@item.ModelName <span>(318)</span></label>
                                            </div>
                                        }


                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>PROSESSOR</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.processorSerieGetDtos)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.processorserieid == item.Id ? "checked" : "") name="processorserieid" value="@item.Id" id="processor-@item.Id">
                                                <label for="processor-@item.Id">@item.Name <span>(318)</span></label>
                                            </div>
                                        }

                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>OPERATİV YADDAŞ (RAM)</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.mCapacityGetDtos)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.memorycapacityid == item.Id ? "checked" : "") name="memorycapacityid" value="@item.Id" id="memory-@item.Id">
                                                <label for="memory-@item.Id">@item.Capacity <span>(318)</span></label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>QRAFİK KART</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.vCSerieGets)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.videocardserieid == item.Id ? "checked" : "") name="videocardserieid" value="@item.Id" id="vc-@item.Id">
                                                <label for="vc-@item.Id">@item.Name <span>(318)</span></label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>HDD</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.hardDiscCapacityGetDtos)
                                        {

                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.hddcapacityid == item.Id ? "checked" : "") name="hddcapacityid" value="@item.Id" id="hdd-@item.Id">
                                                <label for="hdd-@item.Id">@item.Capacity <span>(318)</span></label>
                                            </div>

                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>SSD (SƏRT SƏTHLİ DİSK)</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.SSDCapacities)
                                        {

                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.ssdcapacityid == item.Id ? "checked" : "") name="ssdcapacityid" value="@item.Id" id="ssd-@item.Id">
                                                <label for="ssd-@item.Id">@item.Capacity <span>(318)</span></label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>Brands</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.brandGetDtos)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.brandid == item.Id ? "checked" : "") name="brandid" value="@item.Id" id="brand-@item.Id">
                                                <label for="brand-@item.Id">@item.Name <span>(318)</span></label>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="filter-item">
                                    <div class="filter-title">
                                        <h2>Əməliyyat Sistemi</h2>
                                        <i class="fa-solid fa-angle-down"></i>

                                    </div>
                                    <div class="filter-input">
                                        @foreach (var item in Model.Softwares)
                                        {
                                            <div class="input-block">
                                                <input form="filterForm" type="radio" @(ViewBag.softwareid == item.Id ? "checked" : "") name="softwareid" value="@item.Id" id="software-@item.Id">
                                                <label for="software-@item.Id">@item.Name <span>(318)</span></label>
                                            </div>
                                        }

                                    </div>
                                </div>
                                <div class="filter-item">
                                    <form id="filterForm" asp-action="Index" asp-controller="Catalog" method="get">
                                        <input type="hidden" name="page" value="@Model.Paginated.PageIndex" />
                                        <input type="hidden" name="categoryid" value="@ViewBag.categoryid" />

                                        <button type="submit" class="btn btn-primary filter-btn">filter</button>
                                    </form>
                                </div>
                                <!-- sidebar area end -->
                            </div>
                        </div>


                        <!-- Popular Brends -->
                        <div class="blog-tags">
                            <div class="tags-desc">
                                <h3>Bakıda tanınmış brendlər</h3>
                            </div>
                            <div class="line">
                                @foreach (var item in Model.brandGetDtos)
                                {
                                    <a asp-action="index" asp-controller="catalog" asp-route-brandid="@item.Id">@item.Name</a>
                                }

                            </div>
                        </div>
                    </div>
                    <!-- aside end -->

                    <div class="col-lg-9 col-md-12">


                        <!-- New Products start here  -->
                        <div class="new-products">
                            <div class="content-heading">
                                <h2>Kompüterlər</h2>
                            </div>

                            <div class="sub-categories">
                                <div class="blog-tags">
                                    <div class="line">
                                        <a href="">Acer kompüterləri</a>
                                        <a href="">Asus Mini kompüterləri</a>
                                        <a href="">Gigabyte kompüterləri</a>
                                        <a href="">HP Kompüterləri</a>
                                        <a href=""> iComp Kompüterləri</a>
                                        <a href="">Lenovo Kompüterləri</a>
                                    </div>
                                </div>
                            </div>

                            <div class="order-filter">
                                <select form="filterForm" name="sort" id="orderFilter">
                                    <option selected=" " value="default">Varsayılan olaraq</option>
                                    <option value="price_high">Qiyməti artır</option>
                                    <option value="price_low">Qiyməti azalır</option>
                                    <option value="name_asc">Başlığa görə(A-Z)</option>
                                    <option value="name_desc">Başlığa görə(Z-A)</option>
                                    <option value="">Populyarlıq</option>
                                </select>
                            </div>

                            <div class="paginatoin-area ">
                                <ul class="pagination-box">

                                    @if (Model.Paginated.HasPrev)
                                    {
                                        <li>
                                            <a class="Previous" asp-action="index" asp-route-minprice="@ViewBag.FilterMinPrice" asp-route-maxprice="@ViewBag.FilterMaxPrice" asp-route-page="@(Model.Paginated.PageIndex - 1)" asp-route-processorserieid="@ViewBag.processorserieid" asp-route-videocardserieid="@ViewBag.videocardserieid" asp-route-motherboardid="@ViewBag.motherboardid" asp-route-prodtypeid="@ViewBag.prodtypeid" asp-route-memorycapacityid="@ViewBag.memorycapacityid" asp-route-brandid="@ViewBag.brandid" asp-route-destinationid="@ViewBag.destinationid" asp-route-categoryid="@ViewBag.categoryid" asp-route-hddcapacityid="@ViewBag.hddcapacityid" asp-route-ssdcapacityid="@ViewBag.ssdcapacityid" asp-route-sort="@ViewBag.sort"><i class="fa-solid fa-chevron-left"></i></a>
                                        </li>
                                    }
                                    @for (var i = 1; i <= Model.Paginated.TotalPage; i++)
                                    {
                                        <li class="@(Model.Paginated.PageIndex == i ? "active" : "" )"><a asp-action="index" asp-route-minprice="@ViewBag.FilterMinPrice" asp-route-maxprice="@ViewBag.FilterMaxPrice" asp-route-page="@i" asp-route-processorserieid="@ViewBag.processorserieid" asp-route-videocardserieid="@ViewBag.videocardserieid" asp-route-motherboardid="@ViewBag.motherboardid" asp-route-prodtypeid="@ViewBag.prodtypeid" asp-route-memorycapacityid="@ViewBag.memorycapacityid" asp-route-brandid="@ViewBag.brandid" asp-route-destinationid="@ViewBag.destinationid" asp-route-categoryid="@ViewBag.categoryid" asp-route-hddcapacityid="@ViewBag.hddcapacityid" asp-route-ssdcapacityid="@ViewBag.ssdcapacityid" asp-route-sort="@ViewBag.sort">@i</a></li>
                                    }
                                    @if (Model.Paginated.HasNext)
                                    {
                                        <li><a class="Next" asp-action="index" asp-route-minprice="@ViewBag.FilterMinPrice" asp-route-maxprice="@ViewBag.FilterMaxPrice" asp-route-page="@(Model.Paginated.PageIndex + 1)" asp-route-processorserieid="@ViewBag.processorserieid" asp-route-videocardserieid="@ViewBag.videocardserieid" asp-route-motherboardid="@ViewBag.motherboardid" asp-route-prodtypeid="@ViewBag.prodtypeid" asp-route-memorycapacityid="@ViewBag.memorycapacityid" asp-route-brandid="@ViewBag.brandid" asp-route-destinationid="@ViewBag.destinationid" asp-route-categoryid="@ViewBag.categoryid" asp-route-hddcapacityid="@ViewBag.hddcapacityid" asp-route-ssdcapacityid="@ViewBag.ssdcapacityid" asp-route-sort="@ViewBag.sort"><i class="fa-solid fa-chevron-right"></i></a></li>
                                    }
                                </ul>
                            </div>

                            <div class="new-products-inner">
                                <div class="row">
                                    @foreach (var item in Model.Paginated.Items)
                                    {
                                        <div class="col-lg-3 col-md-6 col-sm-12">
                                            <div class="new-products__item">
                                                <div class="new-products__item-card">
                                                    <div class="item__card-header">
                                                        <div class="product-photo">
                                                            <img src="~/uploads/products/@item.ProductImages.FirstOrDefault(x => x.PosterStatus == true)?.Image" alt="">
                                                        </div>
                                                        <div class="product-title">
                                                            <a asp-action="index" asp-controller="detail" asp-route-id="@item.Id">@item.Name</a>
                                                        </div>
                                                    </div>
                                                    <div class="item__card-body">
                                                        <div class="product-desc">
                                                            <p>
                                                               @(item.Processor?.ProcessorSerie?.Name == null ? "" : item.Processor?.ProcessorSerie?.Name + "|")  @(item.ProdMemory?.MemoryCapacity?.Capacity == null ? "" : item.ProdMemory?.MemoryCapacity?.Capacity + "|") @(item.ProdMemory?.DDRType == null ? "" : item.ProdMemory?.DDRType + "|") @(item.SSD?.SSDCapacity?.Capacity == null? "" : item.SSD?.SSDCapacity?.Capacity + "SSD |")  @(item.HardDisc?.HDDCapacity?.Capacity == null? "" : item.HardDisc?.HDDCapacity?.Capacity + "HDD |")  @(item.Processor?.ModelName == null ? "" : item.Processor?.ModelName + "|")
                                                                @(item.VideoCard?.CoreSpeed == null ? "" : item.VideoCard?.CoreSpeed + "|") @(item.VideoCard?.MemoryCapacity==null? "" : item.VideoCard?.MemoryCapacity + "|") @(item.VideoCard?.VideoCardSerie?.Name==null? "" : item.VideoCard?.VideoCardSerie?.Name + " series |")  @(item.GraphCard == null ? "" : item.GraphCard + "|") @(item.MotherBoardSound == null ? "" : item.MotherBoardSound+ "|") @(item.Network == null ? "" : item.Network + "|")
                                                            </p>
                                                        </div>
                                                        <div class="product-price">
                                                            <span>@item.Price <sup>azn</sup></span>
                                                            <h6>Stokda : <span class="@(item.IsAvailable == true ? "text-success" : "text-danger")">@(item.IsAvailable == true ? "Var" : "Yox")</span></h6>
                                                        </div>
                                                        <div class="product-checkout">
                                                            <a asp-action="addbasket" asp-controller="catalog" asp-route-id="@item.Id" class="btn btn-primary add-to-basket">Səbətə</a>
                                                            <a asp-action="order" asp-controller="checkout" asp-route-id="@item.Id" class="btn btn-danger fast-order">Tez Sifariş</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- New Products end here  -->
                    </div>
                </div>
            </div>

        </div>
    </section>

    <section id="services">
        <div class="contentWrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="assets/img/Services/s1.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>Sürətli çatdırılma</h6>
                            </div>
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="assets/img/Services/s2.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>RƏSMİ ZƏMANƏT</h6>
                            </div>
                            <div class="line"></div>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="assets/img/Services/s3.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>KREDİTLƏ SATIŞ</h6>
                            </div>
                            <div class="line"></div>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="assets/img/Services/s4.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>YÜKSƏK KEYFİYYƏT</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts{
<script>
    $(document).ready(function () {

        $(function () {
        $("#slider-range").slider({
            range: true,
            orientation: "horizontal",
            min: @((double)Model.MinPrice),
            max: @((double)Model.MaxPrice),
            values: [@((double)ViewBag.FilterMinPrice), @((double)ViewBag.FilterMaxPrice)],
            //   step: 100,

            slide: function (event, ui) {
                if (ui.values[0] == ui.values[1]) {
                    return false;
                }

                $("#min_price").val(ui.values[0]);
                $("#max_price").val(ui.values[1]);
            },
            //change: function (event, ui) {
            //    if (true) {

            //    }
            //}
        });


        $("#min_price").val($("#slider-range").slider("values", 0));
        $("#max_price").val($("#slider-range").slider("values", 1));

    });

    })
</script>
}
