@model AppUserLoginPostDto

<form method="post" asp-action="Login" asp-controller="Account" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="UserName" style="font-size: 25px;">UserName</label>
        <input asp-for="UserName" class="form-control" id="inputEmail" placeholder="Enter UserName">
        <span class="text-danger" asp-validation-for="UserName"></span>

    </div>
    <div class="form-group">
        <label asp-for="Password" style="font-size: 25px;">Password</label>
        <input asp-for="Password" class="form-control" id="inputPassword" placeholder="Password">
        <span class="text-danger" asp-validation-for="Password"></span>

    </div>
    <div class="form-group">
        <label class="form-check-label"><input type="checkbox"> Remember me</label>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>