@model ProductGetDTO
@{
    ViewData["Title"] = "Index";
}


<main>
    <!-- Home Page -->
    <section id="main-home-page">
        <div class="contentWrap">
            <div class="container">
                <div class="breadcrumb">
                    <ul class="breadcrumb-nav">
                        <li class="nav-item"><a href="#">Kompüter mağazası "iComp"</a></li>
                        <li class="nav-item"><span class="breadcrumb-arrow">></span><a href="#">Kompüterlər</a></li>
                        <li class="nav-item"><span class="breadcrumb-arrow">></span><a href="#">Hp Kompüterləri</a></li>
                        <li class="nav-item">
                            <span class="breadcrumb-arrow">></span><a href="#">
                                HP ProDesk 400 G7 (11M80EA) Desktop PC
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <!-- aside start -->
                    <div class="col-lg-3">

                        <!-- Popular Brends -->
                        <div class="blog-tags">
                            <div class="tags-desc">
                                <h3>Bakıda tanınmış brendlər</h3>
                            </div>
                            <div class="line">
                                <a href="">Apple</a>
                                <a href="">Asus</a>
                                <a href="">Lenovo</a>
                                <a href="">Microsoft</a>
                                <a href="">HP</a>
                                <a href="">Sony</a>
                                <a href="">SteelSeries</a>
                                <a href="">Acer</a>
                                <a href="">Gigabyte</a>
                                <a href="">Dell</a>
                                <a href="">MSI</a>
                                <a href="">Rampage</a>
                                <a href="">Intel</a>
                            </div>
                        </div>
                    </div>
                    <!-- aside end -->

                    <div class="col-lg-9">
                        <div class="content-heading">
                            <h2>
                                @Model.Name
                            </h2>
                        </div>
                        <!-- Detail start -->
                        <div class="product-detail">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="product-image-box">

                                        <div class="product-detail-image">
                                            <img src="~/uploads/products/@Model.ProductImages.FirstOrDefault(x => x.PosterStatus == true)?.Image" alt="">
                                        </div>
                                        <div class="product-image-nav">

                                            <ul>
                                                <div class="gallery">
                                                @foreach (var item in Model.ProductImages.Where(x => x.PosterStatus == null))
                                                {
                                                    <li>
                                                            <a href="~/uploads/products/@item?.Image" class="big" rel="rel1">
                                                                <img src="~/uploads/products/@item?.Image" alt="" title="Image 1">
                                                            </a>
                                                    </li>
                                                }
                                                </div>
                                            </ul>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="product-detail-box">
                                        <div class="product-detail-desc">
                                            <p>@Model.Processor.ModelName | @Model.ProdMemory.MemoryCapacity?.Capacity @Model.ProdMemory.DDRType | @Model.HardDisc.HDDCapacity?.Capacity @Model.HardDisc.ModelName | @Model.MotherBoard.ModelName | @Model.Software.Name</p>
                                        </div>
                                        <div class="product-detail-price">
                                            <p><span>@Model.SalePrice</span>azn</p>
                                        </div>
                                        <div class="product-detail-features">
                                            <div class="prod-detail">
                                                <div class="detail-info">
                                                    <div class="detail-name">
                                                        <p>Tip</p>
                                                    </div>
                                                    <div class="detail-value">
                                                        <p>@Model.ProdType.Name</p>
                                                    </div>
                                                </div>
                                                <div class="detail-info">
                                                    <div class="detail-name">
                                                        <p>Brand</p>
                                                    </div>
                                                    <div class="detail-value">
                                                        <p>@Model.Brand.Name</p>
                                                    </div>
                                                </div>
                                                <div class="detail-info">
                                                    <div class="detail-name">
                                                        <p>Rəng</p>
                                                    </div>
                                                    <div class="detail-value">
                                                        <p>@Model.Color.Name</p>
                                                    </div>
                                                </div>
                                                <div class="detail-info">
                                                    <div class="detail-name">
                                                        <p>Təyinat</p>
                                                    </div>
                                                    <div class="detail-value">
                                                        <p>@Model.Destination.Name</p>
                                                    </div>
                                                </div>
                                                <div class="detail-info">
                                                    <div class="detail-name">
                                                        <p>
                                                            Ana plata
                                                        </p>
                                                    </div>
                                                    <div class="detail-value">
                                                        <p>@Model.MotherBoard.ModelName</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="product-checkout">
                                            <a href="" class="btn btn-primary">Səbətə</a>
                                            <a href="" class="btn btn-danger">Tez Sifariş</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="tab-content">
                                        <ul class="prodNav">
                                            <li id="pTab1" class="ptItem active">
                                                TƏSVİR @Model.Name
                                            </li>
                                            <li id="pTab2" class="ptItem ">Reviews</li>
                                        </ul>
                                        <div class="prodBody">
                                            <div class="prodMain active" id="pTab1C">
                                                <p class="mg-b">
                                                    @Model.Name modelini Azərbaycanda ən ucuz qiymətə
                                                    iComp internet mağazasından əldə edin. Bizim mağazada yalnız
                                                    dünyanın aparıcı istehsalçılarının rəsmi zəmanətli məhsullarının
                                                    satışı həyata keçirilir. Mağazamızda həm nəğd, həm də kreditlə
                                                    satış mümkündür.

                                                </p>
                                                <p class="mg-b">
                                                    Əgər lazımi məbləğ yoxdursa, kreditin həcmi və müddəti ilə bağlı
                                                    menecerlərimizlə əlaqə saxlaya bilərsiniz.

                                                </p>
                                                <p class="mg-b">
                                                    Siz @Model.Name modelini Bakıda yerləşən
                                                    mağazamızdan götürə və ya ünvana çatdırılma sifariş edə
                                                    bilərsiniz.

                                                </p>
                                                <p class="mg-b">
                                                    @Model.Name kreditlə hissə-hissə ödəmə ilə
                                                    dükanımızdan almaq imkanına maliksiniz.

                                                </p>
                                                <p class="mg-b">
                                                    Banka gedmədən sərfəli şərtlərlə yerindəcə kreditlə iComp.az dan
                                                    almaq olar.

                                                </p>

                                                <div class="prod-option">
                                                    <div class="option-head">
                                                        <h5>
                                                            Ümumi məlumat
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>Tip</p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>@Model.ProdType.Name</p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>Brand</p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>@Model.Brand.Name</p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>Model</p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.Name
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>Rəng</p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>@Model.Color.Name</p>
                                                        </div>
                                                    </div>
                                                    <div class="option-head">
                                                        <h5>
                                                            Proqram
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Proqram təminatı
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.Software.Name
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-head">
                                                        <h5>
                                                            Texniki göstəricilər
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Prosessor
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.Processor.ModelName
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Prosessor sürəti
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.Processor.Speed
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Operativ yaddaş (RAM)
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.ProdMemory.MemoryCapacity.Capacity
                                                            </p>
                                                        </div>
                                                    </div>

                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Operativ yaddaşın sürəti
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.ProdMemory.DDRType @Model.ProdMemory.MemoryCapacity.Capacity @Model.ProdMemory.Speed
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Qrafik kart
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.VideoCard.ModelName
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Səs

                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.SoundType
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-head">
                                                        <h5>
                                                            Yaddaş həcmi
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                @(Model.HardDisc.HDDCapacity?.IsSSD == true? "SSD" : "HDD")
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.HardDisc.HDDCapacity?.Capacity
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-head">
                                                        <h5>
                                                            Şəbəkə
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Şəbəkə
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.Network
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">

                                                        <div class="option-name">
                                                            <p>
                                                                Simsiz əlaqə
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @(Model.HasWifi == true ? "✔" : "-")
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-head">
                                                        <h5>
                                                            Əlavə
                                                        </h5>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Şəbəkə
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.PowerSupply
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="option-info">
                                                        <div class="option-name">
                                                            <p>
                                                                Zəmanət müddəti
                                                            </p>
                                                        </div>
                                                        <div class="option-value">
                                                            <p>
                                                                @Model.WarrantyPeriod
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="prodMain " id="pTab2C">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="comment-form">
                                                            <form action="#">
                                                                <div class="comment-title pg-b">
                                                                    <h2>Yeni mesaj</h2>
                                                                </div>
                                                                <div class="comment-rating pg-b">
                                                                    <span>Məhsul reytinqi:</span>
                                                                    <div class="rate-prod">
                                                                        <div class="rate">
                                                                            <input type="radio" id="star5" name="rate"
                                                                                   value="5" />
                                                                            <label for="star5" title="text">
                                                                                5
                                                                                stars
                                                                            </label>
                                                                            <input type="radio" id="star4" name="rate"
                                                                                   value="4" />
                                                                            <label for="star4" title="text">
                                                                                4
                                                                                stars
                                                                            </label>
                                                                            <input type="radio" id="star3" name="rate"
                                                                                   value="3" />
                                                                            <label for="star3" title="text">
                                                                                3
                                                                                stars
                                                                            </label>
                                                                            <input type="radio" id="star2" name="rate"
                                                                                   value="2" />
                                                                            <label for="star2" title="text">
                                                                                2
                                                                                stars
                                                                            </label>
                                                                            <input type="radio" id="star1" name="rate"
                                                                                   value="1" />
                                                                            <label for="star1" title="text">
                                                                                1
                                                                                star
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="clear-fix"></div>
                                                                </div>
                                                                <div class="comment-input pg-b">
                                                                    <input type="text" placeholder="Ad">
                                                                </div>
                                                                <div class="comment-textarea pg-b">
                                                                    <textarea name="" placeholder="Mesaj mətni" id="" cols="50" rows="10"></textarea>
                                                                </div>
                                                                <div class="comment-button pg-b">
                                                                    <a href="#" class="btn btn-primary">Mesaj əlavə etmək</a>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="comment-block">
                                                            <h1>Müzakirə</h1>
                                                            <div class="noComments">bu element üçün ismarıc yoxdur</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Detail end -->

                    </div>
                </div>

            </div>

        </div>
    </section>

    <section id="services">
        <div class="contentWrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="~/assets/img/Services/s1.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>Sürətli çatdırılma</h6>
                            </div>
                            <div class="line"></div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="~/assets/img/Services/s2.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>RƏSMİ ZƏMANƏT</h6>
                            </div>
                            <div class="line"></div>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="~/assets/img/Services/s3.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>KREDİTLƏ SATIŞ</h6>
                            </div>
                            <div class="line"></div>

                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="services-box">
                            <div class="services__icon">
                                <img src="~/assets/img/Services/s4.png" alt="">
                            </div>
                            <div class="services__title">
                                <h6>YÜKSƏK KEYFİYYƏT</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


